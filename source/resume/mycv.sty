%% Section Headings, etc.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\titleformat{\section} %command
            {\Large\scshape\raggedright} %format
            {} %label
            {0em} %sep
            {} %before
            [\titlerule]
\titlespacing{\section}{0pt}{10pt}{5pt}

\titleformat{\subsection} %command
            [leftmargin] %shape
            {\small\scshape\raggedleft} %format
            {} %label
            {0pt} %sep
            {} %before
            [] %after
\titlespacing{\subsection}{90pt}{5pt}{15pt}

\titleformat{\subsubsection} %command
            [leftmargin] %shape
            {\tiny\scshape\raggedleft} %format
            {} %label
            {0pt} %sep
            {} %before
            [] %after
\titlespacing{\subsubsection}{60pt}{0pt}{15pt}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

